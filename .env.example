# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_BASE_DOMAIN=defragancias.com
SUPABASE_ANON_KEY=your-role-key

# Supabase Service Role Key (KEEP SECRET - Never expose to client!)
# Required for super admin operations and tenant management
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Site configuration
NEXT_PUBLIC_SITE_NAME=Sacre Azur

# Multi-tenant configuration
# Base domain for constructing tenant URLs (e.g., tenant.sacreazur.com)
NEXT_PUBLIC_BASE_DOMAIN=defragancias.com

# Development tenant slug (used when no subdomain is detected in localhost)
NEXT_PUBLIC_DEV_TENANT_SLUG=sacreazur

# URLs
NEXT_PUBLIC_SITE_URL=https://sacreazur.com
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

NODE_ENV=development
